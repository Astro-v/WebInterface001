<!DOCTYPE html>
<html>

<head>
    <title>Directories</title>
    <link rel="stylesheet" type="text/css" href="/directories_styles.css">

</head>

<body>
    <header>
        <p>
            <%= curent_path %>
        </p>
    </header>
    <nav class="navigation">
        <div class="nav_content">
            <div class="icon">
                <img src="/images/icon/account_circle.svg" alt="home">
            </div>
            <div class="nav_description">
                <%= username %>
            </div>
        </div>
        <hr class="nav_line">
        <div class="nav_content">
            <div class="icon">
                <img src="/images/icon/account_circle.svg" alt="home">
            </div>
            <div class="nav_description">
                <%= username %>
            </div>
        </div>
    </nav>
    <main>
        <div class="container">
            <% directories.forEach(function(directory) { %>
                <a href="/directories<%= curent_path %>/<%= directory %>">
                    <div class="item">
                        <div class="folder-item"></div>
                        <p>
                            <%= directory %>
                        </p>
                    </div>
                </a>
                <% }); %>
        </div>
    </main>
</body>

</html>